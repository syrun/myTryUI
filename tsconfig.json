{
  "compilerOptions": {
    "target": "ESNext", // 打包后的目标语法
    "module": "ESNext", // 模块转换后的格式
    "esModuleInterop": true, // 支持模块转换
    "skipDefaultLibCheck": true, // 跳过类库检测
    "forceConsistentCasingInFileNames": true, // 强制区分大小写
    "moduleResolution": "node", // 模块解析方式
    "jsx": "preserve", // 不转化jsx
    "declaration": true, // 生成声明文件
    "sourceMap": true  // 生成映射文件
  }
}